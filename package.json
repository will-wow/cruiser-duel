{
  "name": "cruiser-duel",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node -e \"console.log('open browser at http://localhost:8081/vr/\\n\\n');\" && node node_modules/react-native/local-cli/cli.js start",
    "bundle": "node node_modules/react-vr/scripts/bundle.js",
    "open": "node -e \"require('xopen')('http://localhost:8081/vr/')\"",
    "devtools": "react-devtools",
    "test": "jest",
    "format": "yarn format-eslint && yarn format-prettier",
    "format-eslint": "eslint --fix **/*.{js,jsx}",
    "format-tslint": "tslint -p . --config tslint.json",
    "format-prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "deploy": "surge -p ./vr/build -d vr-tic-tac-toe.surge.sh"
  },
  "dependencies": {
    "@rxreact/core": "^1.0.2",
    "ovrui": "~2.0.0",
    "ramda": "^0.25.0",
    "react": "16.0.0",
    "react-native": "~0.48.0",
    "react-native-typescript-transformer": "^1.2.3",
    "react-vr": "~2.0.0",
    "react-vr-controller-raycaster": "^1.0.0",
    "react-vr-web": "~2.0.0",
    "rxjs": "^5.5.7",
    "three": "^0.87.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/ramda": "^0.25.20",
    "@types/react": "^16.0.40",
    "@types/react-native": "^0.52.19",
    "babel-eslint": "^8.2.2",
    "babel-jest": "22.4.3",
    "babel-preset-react-native": "^1.9.1",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "22.4.3",
    "prettier": "^1.11.1",
    "react-devtools": "^2.5.2",
    "react-test-renderer": "16.0.0",
    "surge": "^0.20.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "xopen": "1.0.0"
  },
  "jest": {
    "preset": "react-vr",
    "transform": {
      "^.+\\.[jt]sx?$": "<rootDir>/jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
